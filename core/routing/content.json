{
    "install":{
        "selector":{
            "method":["INSTALL_SYSTEM"]
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"empty.php"}
            },
            "positions":{
                "content":[{"name":"admin/backup::installSystem", "params":{}}]
            },
            "theme":"admin"
        }
    },
    "error404":{
        "selector":{
            "status":404
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"404.php"}
            }
        }
    },
    "error403":{
        "selector":{
            "status":403
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"empty.php"}
            },
            "positions":{
                "content":[{"name":"admin/authorization", "params":{}}]
            }
        }
    },
    "ajax":{
        "selector":{
            "uri":"/ajax/{moduleName}",
            "params":{
                "moduleName":{"type":"any"}
            }
        },
        "response":{
            "module":{
                "name":"ajax",
                "params":{"moduleName":"{moduleName}"}
            }
        }
    },
    "reverseRouting":{
        "selector":{
            "uri":"/route:{routeName}",
            "params":{
                "routeName":{"type":"any"}
            }
        },
        "response":{
            "module":{
                "name":"helpers/reverseRouting",
                "params":{}
            }
        }
    },
    "adminer":{
        "selector":{
            "uri":"/adminer"
        },
        "response":{
            "module":{
                "name":"admin/adminer",
                "params":{}
            }
        }
    },
    "admin/dashboard":{
        "selector":{
            "uri":"/admin"
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"default.php"}
            },
            "positions":{
                "content":[{"name":"admin/dashboard", "params":{}}]
            }
        }
    },
    "admin/menu":{
        "selector":{
            "uri":"/admin/menu/{action}/{id}",
            "params":{
                "action":{"type":"variants", "variants":["new"], "optional":true, "default":"default"},
                "id":{"type":"numeric", "optional":true}
            }
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"default.php"}
            },
            "positions":{
                "content":[{"name":"admin/menu::{action}", "params":{"id":"{id}"}}]
            }
        }
    },
    "admin/articles":{
        "selector":{
            "uri":"/admin/articles/{action}/{id}",
            "params":{
                "action":{"type":"string", "optional":true, "default":"default"},
                "id":{"type":"numeric", "optional":true}
            }
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"default.php"}
            },
            "positions":{
                "content":[{"name":"admin/articles::{action}", "params":{"id":"{id}", "parentId":"{id}"}}]
            }
        }
    },
    "admin/backup":{
        "selector":{
            "uri":"/admin/backup"
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"default.php"}
            },
            "positions":{
                "content":[{"name":"admin/backup", "params":{}}]
            }
        }
    },
    "articles":{
        "selector":{
            "uri":"{uri}",
            "params":{
                "uri":{"type":"any"}
            }
        },
        "response":{
            "module":{
                "name":"page",
                "params":{"template":"default.php"}
            }
        }
    }
}